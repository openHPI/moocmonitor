<!-- Content Header (Page header) -->
<script type="text/javascript">
var ipc = window.require('ipc');
</script>
<header class="main-header">
  <!-- Header Navbar: style can be found in header.less -->
  <a href="#/" class="logo"><b>MOOC</b>Monitor</a>
  <nav class="navbar navbar-static-top" role="navigation">
    <!-- Sidebar toggle button-->
    <a href="#" class="sidebar-toggle" data-toggle="offcanvas" role="button">
      <span class="sr-only">Toggle navigation</span>
    </a>
    <div class="navbar-custom-menu">
      <ul class="nav navbar-nav">
        <li>
          <a href="javascript:ipc.sendSync('synchronous-message', 'fullscreen');">
            <i class="fa fa-arrows-alt"></i>
          </a>
        </li>

        <li>
          {{#link-to "alerts" }}
            <i class="fa fa-bell-o"></i>
            <span class="label label-info">0</span>
          {{/link-to}}
        </li>

        <li>
          {{#link-to "home" }}
            <i class="fa fa-home"></i>
          {{/link-to}}
        </li>
        <li>
          {{#link-to "globe" }}
            <i class="fa fa-globe"></i>
          {{/link-to}}
        </li>
        <li>
          <a href="javascript:ipc.sendSync('synchronous-message', 'exit');">
            <i class="fa fa-sign-out"></i>
          </a>
        </li>
      </ul>
    </div>
  </nav>
</header>
<aside class="main-sidebar">
  <!-- sidebar: style can be found in sidebar.less -->
  <section class="sidebar">
    <!-- Sidebar Menu -->
    <ul class="sidebar-menu">
      <!-- Optionally, you can add icons to the links -->
      <li class="active">{{#link-to "home" }}<i class="fa fa-home"></i> <span>Home</span>{{/link-to}}</li>
      <li>{{#link-to "alerts"}}<i class="fa fa-bell"></i> <span>Alerts</span>{{/link-to}}</li>
      <li>{{#link-to "globe"}}<i class="fa fa-globe"></i> <span>Globus</span>{{/link-to}}</li>
      <li><a href="javascript:ipc.sendSync('synchronous-message', 'devtools');">DEV</a> </li>
    </ul>
    <!-- /.sidebar-menu -->
  </section>
  <!-- /.sidebar -->
</aside>
<div class="content-wrapper" style="min-height: 850px;">
  <section class="content">
    {{liquid-outlet}}
  </section>
</div>
